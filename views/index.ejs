<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header>
        <div class="container">
            <h1>MongoDB CRUD Application</h1>
            <nav>
                <a href="/">Home</a>
                <a href="/add">Add User</a>
            </nav>
        </div>
    </header>
        <main class="container">
            <h2 class="title">Users List</h2>
            <form method="GET" action="/search" class="search-form">
                <div class="search-container">
                    <input type="text" name="query" placeholder="Search users by name..." required>
                    <button type="submit" class="btn primary">Search</button>
                </div>
            </form>
            <table class="table">
                <thead>
                    <tr>
                        <th><a href="/sort?field=name" class="sort-link">Name</a></th>
                        <th><a href="/sort?field=age" class="sort-link">Age</a></th>
                        <th><a href="/sort?field=email" class="sort-link">Email</a></th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length> 0) { %>
                        <% users.forEach(user=> { %>
                            <tr>
                                <td>
                                    <%= user.name %>
                                </td>
                                <td>
                                    <%= user.age %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <a href="/edit/<%= user._id %>" class="btn secondary">Edit</a>
                                    <form method="POST" action="/delete/<%= user._id %>" style="display:inline;">
                                        <button type="submit" class="btn danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="no-data">No users found.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </main>
    <footer>
        <div class="container">
            <p>&copy; 2025 Your App. All rights reserved.</p>
        </div>
    </footer>
</body>

</html>